LEFT_COMBO_HRM(copy,  &cut_copy, LA(LSHFT) 0, LM3 LM2, DEF PC NAV SYM NUM)
LEFT_COMBO_HRM(paste, &kp, LS(LCTRL) LC(V), LM2 LM1, DEF PC NAV SYM NUM)
SIMPLE_MORPH(cut_copy, CTL, &kp LC(C), &kp LC(V))

ZMK_COMBO_HORZ(undo, &kp LC(Z), LB3 LB2, DEF PC NAV SYM NUM) 
ZMK_COMBO_HORZ(redo, &redo,     LB2 LB1, DEF PC NAV SYM NUM) 
SIMPLE_MORPH(redo, CTL, &kp LS(LC(Z)), &kp LC(Y))
