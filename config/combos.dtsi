ZMK_COMBO_HORZ(find,      &find,      LT3 LT2, DEF PC NAV SYM NUM)
ZMK_COMBO_HORZ(find_next, &find_next, LT2 LT1, DEF PC NAV SYM NUM)
ZMK_COMBO_HORZ(find_prev, &find_prev, LT3 LT1, DEF PC NAV SYM NUM)
// The morphs are meant for PC, because Windows 11 may have different
// bindings per application. On MacOS, F3 triggers launchpad
SIMPLE_MORPH(find,      CTL, &kp LC(F),     &kp F3)
SIMPLE_MORPH(find_next, CTL, &kp LC(G),     &kp F3)
SIMPLE_MORPH(find_prev, CTL, &kp LS(LC(G)), &kp LS(F3))

